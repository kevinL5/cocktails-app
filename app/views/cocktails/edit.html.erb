<%= form_for(@cocktail) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>

<%= form_for([@cocktail, @dose]) do |f| %>
  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :ingredient_id %>
  <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>

  <%= f.submit %>
<% end %>
